<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedGroupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="325dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/detall_grup_image"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:contentDescription="imatge grup"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/lligadebat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/abandonarGrupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:contentDescription="Abandonar Grup"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_exit" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/compartirGrupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:contentDescription="Compartir"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_share" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/chatGrupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="true"
                    android:contentDescription="Chat"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_chat" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/titol_detall_grup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/titol_detall_grup"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/membres_detall_grup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/membres_titol_detall_grup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online" />

            <TextView
                android:id="@+id/integrants_detall_grup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="6/10" />
        </RelativeLayout>

        <TextView
            android:id="@+id/descripcio_detall_esdeveniment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/descripcio_detall_grup"
            android:justificationMode="inter_word"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>